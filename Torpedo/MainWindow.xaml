<Window x:Class="Torpedo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Torpedo"
        mc:Ignorable="d"
        Title="BattleShip" Height="600" Width="1200" >
    <Window.Background>
        <ImageBrush ImageSource="/water.jpg"></ImageBrush>
    </Window.Background>
    <Grid>
        <Button Content="SinglePlayer" Width="100" Height="30" Margin="100,110,100,160" Click="OnStartSinglePlayerMode" ></Button>
        <Button Content="MultiPlayer" Width="100" Height="30" Margin="100,160,100,110" Click="OnStartMultiPlayerMode"></Button>
    </Grid>
</Window>
